<%= render 'shared/header' %>
<div class="container">
	<div class="row">
		<div class="col s6 offset-s3">
			<div class="card-panel register_panel">
				<h4 class="center-align">Register to blog</h4>
				<div class="row login_form">
				 	<!-- Check for errors -> validators are in user model -->
				 	<% if @user.errors.any? %>
					 	<ul>
					 		<% @user.errors.full_messages.each do |msg| %>
					 		<li class="error_list"><%= msg %></li>
					 		<% end %>
					 	</ul>
				 	<% end %>
			 		<!-- Start form -->
					<%= form_for @user, url: { action: "create" } do |f| %>
			      <div class="input-field col s6">
			        <input id="first_name" type="text" class="validate" name="user[first_name]" value= <%= @user[:first_name]%> >
			        <label for="first_name">First Name</label>
			      </div>
			      <div class="input-field col s6">
			        <input id="last_name" type="text" class="validate" name="user[last_name]" value= <%= @user[:last_name]%>>
			        <label for="last_name">Last Name</label>
			      </div>
			    </div>
			    <div class="row">
			      <div class="input-field col s12">
			        <input id="email" type="email" class="validate" name="user[email]" value= <%= @user[:email]%>>
			        <label for="email">Email</label>
			      </div>
			    </div>
			    <div class="row">
			      <div class="input-field col s12">
			        <input id="password" type="password" class="validate" name="user[password]">
			        <label for="password">Password</label>
			      </div>
			    </div>
					<div class="row">
			    	<div class="input-field col s12">
				      <button class="btn waves-effect waves-light" type="submit" name="action"
				      <% if @user.errors.any? %> style="color:red;"<% end%>>Submit
						    <i class="material-icons right" <% if @user.errors.any? %> style="color:red;"<% end%>>send</i>
						  </button>
						</div>
				  </div>
				<% end %>
				<!-- End form -->
			</div>
		</div>
	</div>
</div>
<%= render 'shared/footer' %>