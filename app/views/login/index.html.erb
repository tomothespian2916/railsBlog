<%= render 'shared/header' %>
<div class="container">
	<div class="row">
		<div class="col s6 offset-s3">
			<div class="card-panel register_panel">
				<h4 class="center-align">Login to blog</h4>
				<div class="row login_form">
					<!-- Check for errors -> validators are in user model -->
				 	<% if @errors %>
					 	<ul>
					 		<% @errors.each do |msg| %>
					 		<li class="error_list"><%= msg %></li>
					 		<% end %>
					 	</ul>
				 	<% end %>
			 		<!-- Start form -->
					<%= form_for @user, url: { action: "login" } do |f| %>
			      <div class="input-field col s6">
			        <input id="email" type="text" class="validate" name="user[email]">
			        <label for="email">Email</label>
			      </div>
			      <div class="input-field col s6">
			        <input id="password" type="password" class="validate" name="user[password]">
			        <label for="password">Password</label>
			      </div>
			    </div>
					<div class="row">
			    	<div class="input-field col s12">
				      <button class="btn waves-effect waves-light" type="submit" name="action">Login
						    <i class="material-icons right">send</i>
						  </button>
						  <a href="/register" type="button">
						  	<button class="btn waves-effect waves-light">
						  		Register
						  		<i class="material-icons right">send</i>
						  	</button>
						  </a>
						</div>
				  </div>
				<% end %>
				<!-- End form -->
			</div>
		</div>
	</div>
</div>
<%= render 'shared/footer' %>